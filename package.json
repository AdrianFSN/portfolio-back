{
  "name": "portfolio-back",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/bin/www",
    "dev": "cross-env NODE_ENV=development DEBUG=portfolio-back:* nodemon --config nodemon-server.json",
    "build": "tsc && cp -r src/views dist/views",
    "prod": "npm run build && npm start",
    "initDB": "node --loader ts-node/esm src/initDB/initDB.ts",
    "thumb-req": "nodemon --config nodemon-requesters-responders.json src/services/requesters/resizeThumbnailRequest.ts",
    "thumb-res": "nodemon --config nodemon-requesters-responders.json src/services/responders/resizeThumbnailResponse.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.0.0",
    "cote": "^1.1.0",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "fs-extra": "^11.2.0",
    "helmet": "^8.0.0",
    "http-errors": "~1.6.3",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "morgan": "~1.9.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cote": "^0.19.5",
    "@types/debug": "^4.1.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/i18n": "^0.13.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.7.5",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
